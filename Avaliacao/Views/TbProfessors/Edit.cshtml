@model Avaliacao.Models.TbProfessor

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Professores</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Edição de Dados dos Professores</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.id_professor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.ValueFor(model => model.id_professor)
        </div>
       </div>
        <div class="form-group">
            @Html.LabelFor(model => model.nome_professor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nome_professor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nome_professor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.email_professor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.email_professor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email_professor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.senha_professor, htmlAttributes: new { @class = "control-label col-md-2", Type = "Password" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.senha_professor, new { htmlAttributes = new { @class = "form-control", Type = "Password" } })
                @Html.ValidationMessageFor(model => model.senha_professor, "", new { @class = "text-danger", Type = "Password" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
